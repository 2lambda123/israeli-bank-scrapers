{
  "rules": {
    "arrow-body-style": 0,
    "no-shadow": 0,
    "no-continue": 0,
    "no-await-in-loop": 0,
    "no-underscore-dangle": 0,
    "max-classes-per-file": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "import/no-named-as-default-member": 0,
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "operator-linebreak": ["error", "after"],
    "max-len": ["error", 100, 2, {
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "arrow-parens": ["off"]
  },
  "globals": {
    "document": true,
    "window": true,
    "fetch": true,
    "Headers": true
  },
  "env": {
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb-base"
}
